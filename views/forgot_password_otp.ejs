<link rel = "stylesheet" href = "<%= assetPath('css/user_sign_in.css') %>">

<div class = "user-heading">
    <h2>Enter OTP</h2>
    <p>OTP sent to <%= userResetPassword.user.email %></p>
</div>
<div class = "outer-wrapper">
    <form action = "/reset-password/otp/<%= userResetPassword.accessToken %>" method = "POST">
        <div class = "input-field">
            <input type = "text" id = "otp" name = "otp" required>
            <label for="otp">Enter OTP</label>
        </div>
        <div class = "submit-container">
            <button type = "submit">Submit <i class="fas fa-arrow-right"></i></button>
        </div>
    </form>
</div>