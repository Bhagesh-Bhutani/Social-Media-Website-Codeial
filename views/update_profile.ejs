<link rel="stylesheet" href="/css/update_profile.css">
<main>
    <section class = "update-section row">
        <div class = "col xs0 s0 m1 l2 xl3">

        </div>
        <div class = "col xs12 s12 m10 l8 xl6">
            <div class = "center-align">
                <img src = "/images/default-user-image.png" alt="" class = "circle responsive-img user-photo-edit">
            </div>
            <form action = "/users/update" method = "POST">
                <div class = "input-field">
                    <input type="text" name = "name" id = "name" value = "<%= locals.user.name %>" required>
                    <label for = "name">Name</label>
                </div>
                <div class = "input-field">
                    <input type="text" name = "email" id = "email" value = "<%= locals.user.email %>" required>
                    <label for = "email">Email</label>
                </div>
                <div class = "center-align update-btn-container">
                    <input id = "update-btn" type="submit" value = "Save" class = "waves-effect waves-light btn">
                </div>
            </form>
        </div>
        <div class = "col xs0 s0 m1 l2 xl3">
            
        </div>
    </section>
</main>